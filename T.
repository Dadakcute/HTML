import random

saldo = 100  # saldo inicial

def jogo_aposta():
    global saldo

    while True:  # mant√©m o jogador dentro do jogo at√© ele sair
        print("\nüé≤ Bem-vindo ao mini jogo de apostas!")
        print(f"üí∞ Seu saldo atual: R$ {saldo}")
        print("Escolha um jogo:")
        print("1 - Par ou √çmpar")
        print("2 - Cara ou Coroa")
        print("3 - N√∫mero da sorte (1 a 5)")
        print("0 - Sair do jogo")

        escolha = input("Op√ß√£o: ")

        if escolha == "0":
            return "Saindo do jogo de apostas..."

        if escolha not in ["1", "2", "3"]:
            print("Op√ß√£o inv√°lida!")
            continue

        # PEGAR VALOR DA APOSTA
        try:
            aposta = float(input("Digite o valor da aposta: R$ "))
        except:
            print("Valor inv√°lido.")
            continue

        if aposta <= 0:
            print("A aposta deve ser um valor positivo!")
            continue

        if aposta > saldo:
            print("Saldo insuficiente!")
            continue

        # ------------------------------
        # 1. PAR OU √çMPAR
        # ------------------------------
        if escolha == "1":
            palpite = input("Par ou √çmpar? (p/i): ").lower()
            if palpite not in ["p", "i"]:
                print("Escolha inv√°lida!")
                continue

            num = random.randint(0, 10)
            resultado = "p" if num % 2 == 0 else "i"

            print(f"N√∫mero sorteado: {num}")

            if palpite == resultado:
                saldo += aposta
                print(f"üéâ Voc√™ ganhou! Novo saldo: R$ {saldo}")
            else:
                saldo -= aposta
                print(f"‚ùå Voc√™ perdeu! Novo saldo: R$ {saldo}")

        # ------------------------------
        # 2. CARA OU COROA
        # ------------------------------
        if escolha == "2":
            palpite = input("Cara ou Coroa? (c/r): ").lower()
            if palpite not in ["c", "r"]:
                print("Escolha inv√°lida!")
                continue

            resultado = random.choice(["c", "r"])

            print("Resultado:", "Cara" if resultado == "c" else "Coroa")

            if palpite == resultado:
                saldo += aposta
                print(f"üéâ Voc√™ ganhou! Novo saldo: R$ {saldo}")
            else:
                saldo -= aposta
                print(f"‚ùå Voc√™ perdeu! Novo saldo: R$ {saldo}")

        # ------------------------------
        # 3. N√öMERO DA SORTE
        # ------------------------------
        if escolha == "3":
            try:
                numero = int(input("Escolha um n√∫mero de 1 a 5: "))
            except:
                print("N√∫mero inv√°lido!")
                continue

            if numero < 1 or numero > 5:
                print("N√∫mero fora do intervalo!")
                continue

            sorteado = random.randint(1, 5)
            print(f"N√∫mero sorteado: {sorteado}")

            if numero == sorteado:
                saldo += aposta * 4
                print(f"üéâ Acertou! Ganhou x4! Novo saldo: R$ {saldo}")
            else:
                saldo -= aposta
                print(f"‚ùå N√£o foi dessa vez... Novo saldo: R$ {saldo}")

        # volta automaticamente ao menu
        print("\nRetornando ao menu...\n")