# ---------------------------
# FUNÃ‡ÃƒO: procurar palavra-chave
# ---------------------------
def encontrar_resposta(mensagem):
    mensagem = mensagem.lower()

    for chave in regras:
        if chave in mensagem:
            return random.choice(regras[chave])

    return None   # nÃ£o encontrou


# ---------------------------
# FUNÃ‡ÃƒO: iniciar o chatbot
# ---------------------------
def iniciar_chatbot():
    print("Chatbot iniciado! Digite 'sair' para encerrar.\n")

    while True:
        mensagem = input("VocÃª: ")

        if mensagem.lower() == "sair":
            print("Chatbot: AtÃ© logo!")
            break

        resposta = encontrar_resposta(mensagem)

        if resposta:
            print("Chatbot:", resposta)
        else:
            print("Chatbot: Desculpe, nÃ£o entendi.")


# ---------------------------
# EXECUTAR O CHATBOT
# ---------------------------
iniciar_chatbot()