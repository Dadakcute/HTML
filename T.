# ================================
# MINI JOGO DE APOSTAS (COM SALDO)
# ================================

saldo = 100  # saldo inicial (pode mudar)

def jogar_apostas():
    global saldo
    print("\nğŸ° Bem-vindo ao Mini Jogo de Apostas!")
    print("Seu saldo inicial Ã©:", saldo)

    while True:   # â† agora o MENU fica rodando atÃ© o jogador sair
        print("\n===== MENU DE APOSTAS =====")
        print("1 - Fazer aposta")
        print("2 - Ver saldo")
        print("3 - Sair das apostas")

        opc = input("> ")

        # ----------------------------------
        # OPÃ‡ÃƒO 1: apostando
        # ----------------------------------
        if opc == "1":
            try:
                valor = float(input("Quanto deseja apostar? R$ "))
            except:
                print("Valor invÃ¡lido.")
                continue

            if valor <= 0:
                print("Valor invÃ¡lido.")
                continue

            if valor > saldo:
                print("âŒ Saldo insuficiente!")
                continue

            import random
            resultado = random.choice(["ganhou", "perdeu"])

            if resultado == "ganhou":
                saldo += valor
                print(f"ğŸ‰ VocÃª ganhou! Novo saldo: R$ {saldo}")
            else:
                saldo -= valor
                print(f"ğŸ’¸ VocÃª perdeu! Novo saldo: R$ {saldo}")

        # ----------------------------------
        # OPÃ‡ÃƒO 2: ver saldo
        # ----------------------------------
        elif opc == "2":
            print(f"ğŸ’° Seu saldo atual Ã©: R$ {saldo}")

        # ----------------------------------
        # OPÃ‡ÃƒO 3: sair
        # ----------------------------------
        elif opc == "3":
            print("Saindo das apostas...\n")
            break    # â† O ÃšNICO break, agora sÃ³ sai quando o jogador quiser

        else:
            print("OpÃ§Ã£o invÃ¡lida! Tente novamente.")