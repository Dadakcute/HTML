import random

# -------------------------------------------
# MINI JOGO DE APOSTA (BLOCO SEPARADO)
# -------------------------------------------

saldo = 100  # saldo inicial

def jogo_aposta():
    global saldo

    print("\nğŸ² Bem-vindo ao mini jogo de apostas!")
    print(f"ğŸ’° Seu saldo atual: R$ {saldo}")
    print("Escolha um jogo:")
    print("1 - Par ou Ãmpar")
    print("2 - Cara ou Coroa")
    print("3 - NÃºmero da sorte (1 a 5)")
    print("0 - Sair do jogo")

    escolha = input("OpÃ§Ã£o: ")

    if escolha == "0":
        return "Saindo do jogo..."

    if escolha not in ["1", "2", "3"]:
        return "OpÃ§Ã£o invÃ¡lida!"

    # PEGAR VALOR DA APOSTA
    try:
        aposta = float(input("Digite o valor da aposta: R$ "))
    except:
        return "Valor invÃ¡lido."

    if aposta <= 0:
        return "A aposta deve ser um valor positivo!"

    if aposta > saldo:
        return "Saldo insuficiente!"

    # ------------------------------
    # 1. PAR OU ÃMPAR
    # ------------------------------
    if escolha == "1":
        palpite = input("Par ou Ãmpar? (p/i): ").lower()
        if palpite not in ["p", "i"]:
            return "Escolha invÃ¡lida!"

        num = random.randint(0, 10)
        resultado = "p" if num % 2 == 0 else "i"

        print(f"NÃºmero sorteado: {num}")

        if palpite == resultado:
            saldo += aposta
            return f"ğŸ‰ VocÃª ganhou! Novo saldo: R$ {saldo}"
        else:
            saldo -= aposta
            return f"âŒ VocÃª perdeu! Novo saldo: R$ {saldo}"

    # ------------------------------
    # 2. CARA OU COROA
    # ------------------------------
    if escolha == "2":
        palpite = input("Cara ou Coroa? (c/r): ").lower()
        if palpite not in ["c", "r"]:
            return "Escolha invÃ¡lida!"

        resultado = random.choice(["c", "r"])

        print("Resultado:", "Cara" if resultado == "c" else "Coroa")

        if palpite == resultado:
            saldo += aposta
            return f"ğŸ‰ VocÃª ganhou! Novo saldo: R$ {saldo}"
        else:
            saldo -= aposta
            return f"âŒ VocÃª perdeu! Novo saldo: R$ {saldo}"

    # ------------------------------
    # 3. NÃšMERO DA SORTE
    # ------------------------------
    if escolha == "3":
        try:
            numero = int(input("Escolha um nÃºmero de 1 a 5: "))
        except:
            return "NÃºmero invÃ¡lido!"

        if numero < 1 or numero > 5:
            return "NÃºmero fora do intervalo!"

        sorteado = random.randint(1, 5)
        print(f"NÃºmero sorteado: {sorteado}")

        if numero == sorteado:
            saldo += aposta * 4  # prÃªmio alto
            return f"ğŸ‰ Acertou! Ganhou x4! Novo saldo: R$ {saldo}"
        else:
            saldo -= aposta
            return f"âŒ NÃ£o foi dessa vez... Novo saldo: R$ {saldo}"